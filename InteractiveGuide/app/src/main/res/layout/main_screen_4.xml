<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="100"
    tools:context="com.kitanasoftware.interactiveguide.MainActivity_4"
    android:weightSum="100"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="30"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView"
                android:background="@drawable/main_screen4_logo"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_weight="70"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="50"
        android:padding="10dp">
        <Button
            style="@style/mainScreenButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:onClick="MAPclick"
            android:text="@string/map"
            android:textColor="@color/mapTextColor"
            android:textAlignment="center"
            android:textSize="20dp"
            android:background="@color/mapColor"
            android:drawableLeft="@drawable/map"
            android:id="@+id/button2"
             />

        <Button
            style="@style/mainScreenButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:onClick="AUDIOclick"
            android:background="@color/audioColor"
            android:text="@string/audio"
            android:textColor="@color/audioTextColor"
            android:textAlignment="center"
            android:textSize="20dp"
            android:drawableLeft="@drawable/audio"
            android:id="@+id/button3"
            android:layout_below="@+id/button2"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2"
             />

        <Button
            style="@style/mainScreenButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:onClick="SCHEDULEclick"
            android:background="@color/scheduleColor"
            android:text="@string/schedule"
            android:textColor="@color/scheduleTextColor"
            android:textAlignment="center"
            android:textSize="20dp"
            android:drawableLeft="@drawable/schedule"
            android:id="@+id/button4"
            android:layout_below="@+id/button3"
            android:layout_centerHorizontal="true"
           />


        <Button
            style="@style/mainScreenButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:onClick="NOTIFICATIONSclick"
            android:background="@color/notificationColor"
            android:text="@string/notifications"
            android:textColor="@color/notificationTextColor"
            android:textAlignment="center"
            android:textSize="20dp"
            android:drawableLeft="@drawable/notification"
            android:id="@+id/button5"
            android:layout_below="@+id/button4"
            android:layout_centerHorizontal="true"
         />


        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:onClick="INFORMATIIONclick"
            android:background="@color/informationColor"
            android:text="@string/information"
            android:textColor="@color/informationTextColor"
            android:textAlignment="center"
            android:textSize="20dp"
            android:drawableLeft="@drawable/information"
            android:id="@+id/button6"
            android:layout_below="@+id/button5"
            android:layout_centerHorizontal="true"
           />

    </LinearLayout>



</LinearLayout>
