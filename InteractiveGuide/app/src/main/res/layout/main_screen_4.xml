<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kitanasoftware.interactiveguide.MainActivity_4">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:id="@+id/imageView"
        android:background="@drawable/main_screen4_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="310dp"
        android:layout_height="63dp"
        android:onClick="MAPclick"
        android:text="@string/map"
        android:textColor="@color/mapTextColor"
        android:textAlignment="center"
        android:textSize="20dp"
        android:background="@color/mapColor"
        android:drawableLeft="@drawable/map"
        android:id="@+id/button2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <Button
        android:layout_width="310dp"
        android:layout_height="63dp"
        android:onClick="AUDIOclick"
        android:background="@color/audioColor"
        android:text="@string/audio"
        android:textColor="@color/audioTextColor"
        android:textAlignment="center"
        android:textSize="20dp"
        android:drawableLeft="@drawable/audio"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="10dp" />
    />

    <Button
        android:layout_width="310dp"
        android:layout_height="63dp"
        android:onClick="SCHEDULEclick"
        android:background="@color/scheduleColor"
        android:text="@string/schedule"
        android:textColor="@color/scheduleTextColor"
        android:textAlignment="center"
        android:textSize="20dp"
        android:drawableLeft="@drawable/schedule"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />


    <Button
        android:layout_width="310dp"
        android:layout_height="63dp"
        android:onClick="NOTIFICATIONSclick"
        android:background="@color/notificationColor"
        android:text="@string/notifications"
        android:textColor="@color/notificationTextColor"
        android:textAlignment="center"
        android:textSize="20dp"
        android:drawableLeft="@drawable/notification"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />


    <Button
        android:layout_width="310dp"
        android:layout_height="63dp"
        android:onClick="INFORMATIIONclick"
        android:background="@color/informationColor"
        android:text="@string/information"
        android:textColor="@color/informationTextColor"
        android:textAlignment="center"
        android:textSize="20dp"
        android:drawableLeft="@drawable/information"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />


</RelativeLayout>
