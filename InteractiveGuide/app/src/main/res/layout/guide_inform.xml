<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cv"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:id="@+id/ivPhoto"
        android:background="@drawable/guide_information_portrait"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>





    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Your name"
        android:textAlignment="center"
        android:id="@+id/tvFullName"
        android:visibility="visible"
        android:layout_alignTop="@+id/ivPhoto"
        android:layout_toRightOf="@+id/ivPhoto"
        android:layout_toEndOf="@+id/ivPhoto"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Your Phone"
        android:textAlignment="center"
        android:id="@+id/tvPhone"
        android:visibility="visible"
        android:layout_below="@+id/tvFullName"
        android:layout_alignLeft="@+id/tvFullName"
        android:layout_alignStart="@+id/tvFullName" />
        " />

</RelativeLayout>
</android.support.v7.widget.CardView>