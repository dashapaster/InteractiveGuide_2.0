<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cv"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ivPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvGuideInf" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GUIDE INFORMATION"
        android:id="@+id/tvGuideInf"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="full name"
        android:id="@+id/tvFullName"
        android:layout_below="@+id/tvGuideInf"
        android:layout_toRightOf="@+id/ivPhoto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="full name"
        android:id="@+id/etFullName"
        android:layout_below="@+id/tvGuideInf"
        android:layout_toRightOf="@+id/ivPhoto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="phone"
        android:id="@+id/tvPhone"
        android:layout_below="@+id/tvFullName"
        android:layout_toRightOf="@+id/ivPhoto"
        android:layout_alignRight="@+id/tvFullName"
        android:layout_alignEnd="@+id/tvFullName"
        android:visibility="visible"/>

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="phone"
        android:id="@+id/etPhone"
        android:layout_below="@+id/etFullName"
        android:layout_toRightOf="@+id/ivPhoto"
        android:layout_alignRight="@+id/etFullName"
        android:layout_alignEnd="@+id/etFullName"
        android:visibility="gone"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>